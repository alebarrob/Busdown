<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="darkCard">
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:background">@color/downBlack</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
    </style>

    <style name="darkCardText">
        <item name="android:background">@color/downBlack</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="darkAddEmailTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxBackgroundColor">@color/downBlack</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeColor">@color/light_text_input_layout_stroke_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeErrorColor">@color/downRed</item>
        <item name="hintTextAppearance">@style/TextInputLayoutHint</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="darkTextInputEdit">
        <item name="android:maxHeight">200dp</item>
        <item name="android:scrollbarSize">2dp</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbarThumbVertical">@color/white</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/light_cursor</item>
    </style>

    <style name="lightAddEmailTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:textColorHint">@color/downBlack</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeColor">@color/dark_text_input_layout_stroke_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeErrorColor">@color/downRed</item>
        <item name="hintTextAppearance">@style/TextInputLayoutHint</item>
        <item name="hintTextColor">@color/downBlack</item>
    </style>

    <style name="lightTextInputEdit">
        <item name="android:maxHeight">200dp</item>
        <item name="android:scrollbarSize">2dp</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbarThumbVertical">@color/downGrey</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textColor">@color/downBlack</item>
        <item name="android:textCursorDrawable">@drawable/dark_cursor</item>
    </style>

    <style name="TextInputLayoutHint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="addEmailButton">
        <item name="backgroundTint">@color/downBlack</item>
        <item name="android:text">@string/accept_button_text</item>
    </style>

    <style name="separationLine">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@color/downGrey</item>
    </style>

    <style name="settingsOption">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@drawable/settings_options_ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:foregroundGravity">fill</item>
        <item name="android:textColor">@color/downRed</item>
        <item name="android:textSize">20sp</item>
        <item name="drawableEndCompat">@drawable/ic_right_arrow</item>
        <item name="drawableTint">@color/downRed</item>
    </style>
</resources>